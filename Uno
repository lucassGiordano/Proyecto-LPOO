int CartaValida(GameState* gameState,Card c1,Card c2) {

    if(c1.color==c2.color){return 1;};

    if(c1.symbol==c2.symbol){return 1;};

    return 0;

};

int main(){
    srand(time(0)); // semilla Aleatoria
    GameState gameState;
    gameState.playerCount = 2; // 2 jugadores por ahora
    initDeck(&gameState);
    printDeck(&gameState);
    initHands(&gameState);
    printhand(&gameState);
    printDeck(&gameState);
    playGame(&gameState);
    getchar();
    getchar();
    return 0;
};
